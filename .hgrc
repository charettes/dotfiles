[ui]
username = Simon Charette <charette.s@gmail.com>
ignore = ~/.hgignore
editor = vim

[alias]
recommit = hg commit `cat .hg/last-files.txt` -m `cat .hg/last-message.txt`

[extensions]
extdiff =
mq =
pager =
convert =
record =
graphlog =
fetch =
purge =
color =
rebase =
histedit =
shelve = ~/.hgextensions/shelve/hgshelve.py
histedit = ~/.hgextensions/histedit/hg_histedit.py

[pager]
pager = LESS='FSRX' less

[extdiff]
cmd.meld =

[merge-tools]
meld.args = $local $other

[color]
status.modified = magenta bold
status.added = green bold
status.removed = red bold
status.deleted = red bold
status.unknown = cyan bold
status.ignored = white bold
diff.diffline = bold
diff.extended = cyan bold
diff.file_a = red bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = white red_background 
diff.inserted = white green_background
diff.changed = white
diff.trailingwhitespace = bold red_background

